<body>
    <div class="contain">
        <h3 style="font-family: Arial, Helvetica, sans-serif;font-weight: normal;">LOGIN</h3>
        <form action="/sellerLogin" method="post">
            <input type="text" placeholder="UserName" name="username" style="display: block;" required>
            <input type="password" name="password" style="display: block;" placeholder="Password" required>
            <input type="submit" id="submit" value="LogIn">
            <a href="/forgotPassword" style="text-align: center;">forgot password</a>
        </form>
        <div class="container" style="height:10px;margin:0">
        <% if(error!=''){%>
            <p style="color:red;"><%= error %> </p>
            <% } %>
        </div>
